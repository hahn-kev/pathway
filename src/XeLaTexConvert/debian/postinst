#!/bin/sh
# postinst script for pathway
#
# see: dh_installdeb(1)
prefix=/usr
set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	if [ -d "${prefix}/lib/pwtex/bin/i386-linux" ]; then
		export PATH=${prefix}/lib/pwtex/bin/i386-linux:$PATH
		mktexlsr
		fmtutil --all
	fi
	if [ -d "${prefix}/lib/pwtex/bin/x86_64-linux" ]; then
		export PATH=${prefix}/lib/pwtex/bin/x86_64-linux:$PATH
		mktexlsr
		fmtutil --all
	fi
	echo "$SUDO_USER"
	echo "$HOME"
	if [ ! -z "$SUDO_USER" -a "$HOME" != "/root" ]; then
		sudo -u $SUDO_USER bash ${prefix}/share/pwtex/pathwayXelatexRegistryKeys.sh
	else
		mkdir -p /etc/profile.d
		cp ${prefix}/share/pwtex/pathwayXelatexRegistryKeys.sh /etc/profile.d
		/usr/share/update-notifier/notify-reboot-required
	fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	if [ -f "/etc/profile.d/pathwayXelatexRegistryKeys.sh" ]; then
		rm -f /etc/profile.d/pathwayXelatexRegistryKeys.sh
	fi
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

