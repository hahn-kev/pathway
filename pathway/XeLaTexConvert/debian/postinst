#!/bin/sh
# postinst script for pathway
#
# see: dh_installdeb(1)
prefix=/usr
set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	if [ -d "${prefix}/lib/pwtex/bin/i386-linux" ]; then
		export PATH=${prefix}/lib/pwtex/bin/i386-linux:$PATH
		mktexlsr
		fmtutil --all
	fi
	if [ -d "${prefix}/lib/pwtex/bin/x86_64-linux" ]; then
		cd ${prefix}/lib/pwtex/bin/x86_64-linux
		./mktexlsr
		TEXMFMAIN=${prefix}/lib/pwtex/texmf;./fmtutil --all
	fi
	sudo -u $SUDO_USER bash ${prefix}/share/pwtex/pathwayXelatexRegistryKeys.sh
        #mv /etc/mono/registry/LocalMachine/software/sil/PathwayXeLaTeX/values.xml.dpkg-dist /etc/mono/registry/LocalMachine/software/sil/PathwayXeLaTeX/values.xml
#rm -f ${prefix}/share/man/man7/ConfigurationTool.7.gz
#link ${prefix}/share/man/man7/pathwayB.7.gz ${prefix}/share/man/man7/ConfigurationTool.7.gz
#exec ${prefix}/share/pathway/WritePathwayKeys.cs

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
#rm -f ${prefix}/share/man/man7/ConfigurationTool.7.gz
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

