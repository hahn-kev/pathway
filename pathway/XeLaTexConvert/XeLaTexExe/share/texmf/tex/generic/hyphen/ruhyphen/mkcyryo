#!/bin/sh
# make patterns for the cyryo by repeating patterns for cyre

TMP=.cyryo-tmp

awk '/^\\patterns{/ {p=1;next} /^}/ {p=0;next} p {print}' $1 > $TMP
cat $TMP | grep '^^c5' | grep -v '^^c5[^^^c5]*^^c5' > ${TMP}1
cat $TMP | grep '^^c5[^^^c5]*^^c5' | grep -v '^^c5[^^^c5]*^^c5[^^^c5]*^^c5' > ${TMP}2
cat $TMP | grep '^^c5[^^^c5]*^^c5[^^^c5]*^^c5' > ${TMP}3
test ! -s ${TMP}3 || { echo "*** triple cyre detected in $1:" 1>&2; cat ${TMP}3 1>&2; }

{
echo "% accompanying patterns for cyryo generated from $1"
echo "\patterns{"
cat ${TMP}1 | sed 's,^^c5,^^a3,'
cat ${TMP}2 | sed 'y,^^c5,^^a3,'
cat ${TMP}2 | sed 's,^^c5,^^a3,'
cat ${TMP}2 | sed 's,^^c5,^^a3,2'
echo "}"
} | ./reduce-patt | ./sorthyph

rm -f $TMP ${TMP}[123]
