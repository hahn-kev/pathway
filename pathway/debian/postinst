#!/bin/sh
# postinst script for pathway
#
# see: dh_installdeb(1)
prefix=/usr
set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	rm -f ${prefix}/share/man/man7/ConfigurationTool.7.gz
	link ${prefix}/share/man/man7/pathwayB.7.gz ${prefix}/share/man/man7/ConfigurationTool.7.gz
	#SUDO_USER is defined if the user runs the installer from the command window
	if [ ! -z "$SUDO_USER" ]; then
		export HOME=/home/$SUDO_USER; sudo -u $SUDO_USER bash ${prefix}/share/pathway/pathwayRegistryKeys.sh
	else
		mkdir -p /etc/profile.d
		cp ${prefix}/share/pathway/pathwayRegistryKeys.sh /etc/profile.d
		/usr/share/update-notifier/notify-reboot-required
	fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	rm -f ${prefix}/share/man/man7/ConfigurationTool.7.gz
	rm -f /etc/profile.d/pathwayRegistryKeys.sh

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

