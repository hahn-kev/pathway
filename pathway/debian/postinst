#!/bin/sh
# postinst script for pathway
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

#export >/etc/pathway/settings
#mkdir -p ${PWD}/.mono/registry/CurrentUser/software/sil/pathway
#chmod 777 ${PWD}/.mono/registry/CurrentUser/software/sil/pathway
#cp /etc/pathway/values.xml ${PWD}/.mono/registry/CurrentUser/software/sil/pathway
#chmod 777 ${PWD}/.mono/registry/CurrentUser/software/sil/pathway/values.xml
/etc/pathway/WritePathwayKeys.cs
/etc/pathway/home-keys
xdg-desktop-menu install /etc/pathway/sil-ConfigurationTool.desktop
xdg-icon-resource install --size 22 /etc/pathway/pathwayConfigurationTool22.png sil-pathwayConfigurationTool
xdg-icon-resource install --size 64 /etc/pathway/pathwayConfigurationTool64.png sil-pathwayConfigurationTool
gzip -c /usr/share/doc/pathway/pathwayB.7 >/usr/share/man/man7/pathwayB.7.gz
link /usr/share/man/man7/pathwayB.7.gz /usr/share/man/man7/ConfigurationTool.7.gz

exit 0

