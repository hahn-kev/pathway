<?xml version="1.0" encoding="UTF-8"?>
<stylePick xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="StyleSettings.xsd" version="3">
    <settings>
        <property name="InputPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="OutputPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="UserSheetPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="PublicationLocation"
            value="%(Documents)s/Publications/%(CurrentProject)s/Dictionary"/>
        <property name="MasterSheetPath" value="Styles/Dictionary"/>
        <property name="IconPath" value="Icons"/>
        <property name="SamplePath" value="Samples/Dictionary"/>
        <property name="BaseStyles" value="Base_Styles.css"/>
        <property name="DefaultIcon" value="Graphic/book.png"/>
        <property name="CurrentInput" value="Samples/Bughotu-1pe.xhtml"/>
        <property name="InputType" value="Dictionary"/>
        <property name="LastTask" value="Village Check"/>
        <property name="PreviewType" value="Prince"/>
        <property name="CssEditor" value="C:/Windows/Notepad.exe"/>
        <property name="SelectedIcon" value="Graphic/arrow.png"/>
        <property name="MissingIcon" value="Graphic/missing.png"/>
        <property name="Help" value="PsDoc.chm"/>
        <property name="PrintVia" value="OpenOffice"/>
        <property name="ConfigureDictionary" value="True"/>
        <property name="ReversalIndexes" value="True"/>
        <property name="GrammerSketch" value="False"/>
        <property name="SelectLayout" value="Draft"/>
        <property name="ExtraProcessing" value="True"/>
    </settings>
    <defaultSettings>
        <property name="PrintVia" value="OpenOffice"/>
        <property name="ConfigureDictionary" value="True"/>
        <property name="ReversalIndexes" value="True"/>
        <property name="GrammerSketch" value="False"/>
        <property name="SelectLayout" value="Draft"/>
        <property name="ExtraProcessing" value="True"/>
        <property name="PublicationLocation"
            value="%(Documents)s/Publications/%(CurrentProject)s/Dictionary"/>
    </defaultSettings>
    <features>
        <feature name="Justified">
            <option name="Yes" file="Justified_Yes.css"/>
            <option name="No" file="Justified_No.css"/>
        </feature>
    </features>
    <categories>
        <category name="Media" select="Paper">
            <item name="Paper"/>
            <item name="Mobile"/>
            <item name="Web"/>
            <item name="Others"/>
        </category>
    </categories>
    <roles select="Output User">
        <role name="Output User" icon="Graphic/user.png"/>
        <role name="Project Coordinator" icon="Graphic/coordinator.png"/>
        <role name="Consultant" icon="Graphic/beginner.png"/>
        <role name="System Designer" icon="Graphic/designer.png"/>
    </roles>
    <styles>
        <paper>
            <style name="Draft" file="Layout_01.css">
                <description> Single column draft 11pt A4 with drop capital </description>
            </style>
        </paper>
        <mobile>
            <style name="GPS11J11" file="GPS11J11.css" approvedBy="GPS">
                <description>5.25x8.25in - 1 Col - Justified - Charis 11 on 13</description>
            </style>
        </mobile>
        <web>
            <style name="GPS11J11" file="GPS11J11.css" approvedBy="GPS">
                <description>5.25x8.25in - 1 Col - Justified - Charis 11 on 13</description>
            </style>
        </web>
        <others>
            <style name="GPS11J11" file="GPS11J11.css" approvedBy="GPS">
                <description>5.25x8.25in - 1 Col - Justified - Charis 11 on 13</description>
            </style>
        </others>
    </styles>
    <tasks>
        <task name="Village check" style="Draft" icon="Graphic/user.png"/>
    </tasks>
    <customize>
        <font name="Microsoft Sans Serif" size="9"/>
    </customize>
</stylePick>
