<?xml version="1.0" encoding="UTF-8"?>
<stylePick xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="StyleSettings.xsd" version="14">
    <settings>
        <property name="InputPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="OutputPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="UserSheetPath" value="%(AppData)s/SIL/Pathway"/>
        <property name="PublicationLocation"
            value="%(Documents)s/Publications/%(CurrentProject)s/Dictionary"/>
        <property name="MasterSheetPath" value="Styles/Dictionary"/>
        <property name="IconPath" value="Icons"/>
        <property name="SamplePath" value="Samples/Dictionary"/>
        <property name="BaseStyles" value="Base_Styles.css"/>
        <property name="DefaultIcon" value="Graphic/book.png"/>
        <property name="CurrentInput" value="Samples/Bughotu-1pe.xhtml"/>
        <property name="InputType" value="Dictionary"/>
        <property name="LastTask" value="Village Check"/>
        <property name="PreviewType" value="Prince"/>
        <property name="CssEditor" value="C:/Windows/Notepad.exe"/>
        <property name="SelectedIcon" value="Graphic/arrow.png"/>
        <property name="MissingIcon" value="Graphic/missing.png"/>
        <property name="Help" value="PsDoc.chm"/>
        <property name="PrintVia" value="OpenOffice/LibreOffice"/>
        <property name="ConfigureDictionary" value="True"/>
        <property name="ReversalIndexes" value="True"/>
		<property name="FilterEmptyEntries" value="False" />
        <property name="FilterBrokenLinks" value="False" />		
        <property name="GrammerSketch" value="False"/>
        <property name="LayoutSelected" value="Draft"/>
        <property name="ExtraProcessing" value="True"/>
    </settings>
    <defaultSettings>
        <property name="PrintVia" value="OpenOffice/LibreOffice"/>
        <property name="ConfigureDictionary" value="True"/>
        <property name="ReversalIndexes" value="True"/>
        <property name="GrammerSketch" value="False"/>
        <property name="LayoutSelected" value="Draft"/>
        <property name="ExtraProcessing" value="True"/>
        <property name="PublicationLocation"
            value="%(Documents)s/Publications/%(CurrentProject)s/Dictionary"/>
    </defaultSettings>
    <features>
        <feature name="Justified">
            <option name="Yes" file="Justified_Yes.css"/>
            <option name="No" file="Justified_No.css"/>
        </feature>
    </features>
    <categories>
        <category name="Media" select="Paper">
            <item name="Paper"/>
            <item name="Mobile"/>
            <item name="Web"/>
            <item name="Others"/>
        </category>
    </categories>
    <roles select="Output User">
        <role name="Output User" icon="Graphic/user.png"/>
        <role name="Project Coordinator" icon="Graphic/coordinator.png"/>
        <role name="Consultant" icon="Graphic/beginner.png"/>
        <role name="System Designer" icon="Graphic/designer.png"/>
    </roles>
    <styles>
        <paper>
            <style name="Draft" file="Layout_01.css">
                <description> Single column draft 11pt A4 with drop capital </description>
            </style>
        </paper>
        <mobile>
            <style name="Go Bible" file="GoBible.css" approvedBy="GPS">
                <description>Text only, no section heads or cross references</description>
            </style>
        </mobile>
        <web>
            <style name="GPS11J11" file="GPS11J11.css" approvedBy="GPS">
                <description>5.25x8.25in - 1 Col - Justified - Charis 11 on 13</description>
            </style>
        </web>
        <others>
            <style name="EBook (epub)" file="epub.css" approvedBy="GPS">
                <description>1 column flowed text, left aligned, 13pt font</description>
            </style>
        </others>
    </styles>
    <tasks>
        <task name="Village check" style="Draft" icon="Graphic/user.png"/>
    </tasks>
    <customize>
        <font name="Microsoft Sans Serif" size="9"/>
    </customize>
    <Organizations>
        <Organization>SIl_x0020_International</Organization>
        <Organization>United_x0020_Bible_x0020_Societies</Organization>
        <Organization>Pioneer_x0020_Bible_x0020_Translators</Organization>
    </Organizations>
    <Metadata>
        <meta name="Title" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Creator" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Publisher" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Description" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Copyright Holder" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Type" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Source" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Format" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Contributor" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Relation" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Coverage" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Subject" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Date" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Language" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Identifier" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Cover Page" outputTypes="epub">
            <defaultValue>Yes</defaultValue>
        </meta>
        <meta name="Cover Page Filename" outputTypes="epub">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Cover Page Title" outputTypes="epub">
            <defaultValue>Yes</defaultValue>
        </meta>
        <meta name="Title Page" outputTypes="all">
            <defaultValue>No</defaultValue>
        </meta>
        <meta name="Copyright Page" outputTypes="all">
            <defaultValue>No</defaultValue>
        </meta>
        <meta name="Copyright Page Filename" outputTypes="all">
            <defaultValue></defaultValue>
        </meta>
        <meta name="Table of Contents" outputTypes="all">
            <defaultValue>false</defaultValue>
        </meta>
    </Metadata>
</stylePick>
