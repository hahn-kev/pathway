<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../ScriptPaths.xsl"?>

  <!-- DE- Open an existing Dictionarty Express project -->
<accil on-fail="assert">

   <bug id="TBD" desc="TBD"/>

   <!--sound frequency="400" duration="500"/ -->

   <on-application run="ok" title="Publishing Solutions 1.0">
	   <!-- Open the dictionary file -->
   	   <include from="testPath.xml"/>

	   <click select="menubar/file/open-project"/>
	  <on-dialog wait="1000" title="Open" >
		  <click path="9:File name:[2]/9:File name:/46:File name:"/>
	  	<insert>$testPath;\Output\OpenDic\OpenDic.de</insert>
		  <click path="9:Open/43:Open"/>
	  </on-dialog>
	   
   	<var id="formName" set="Converter"/>
   	<var id="labelName" set="lblProjectType" />
   	<var id="formTitle" set="OpenDic"/>
   	<var id="labelValue" set="Dictionary"/>
	   <model select="new-project[@role='view']" log = "all" >
		   <glimpse id="openIt" select="titlename" expect="$formTitle" on-fail="assert"/>
		   <glimpse id="openIt2" select="titletype" expect="$labelValue" on-fail="assert"/>
	   </model>

   	<click select="menubar/file/export"/>
   	<on-dialog wait="1000" title="Export" name="ExportDlg" path="9:ExportDlg/">
   		<insert>%c</insert>                                         <!--  exit dialog  -->
   	</on-dialog>
   	
   	<click select="menubar/file/exit"/>
   
   </on-application>

  <!-- sound frequency="400" duration="500"/ -->

</accil>

